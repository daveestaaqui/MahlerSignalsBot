{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*"
  ],
  "exclude": [
    "tests",
    "src/tests",
    "**/*.test.ts",
    "tests/**"
  ]
}